// main: ../main.styl

body
  color $dark-gray

img
  max-width 100%

a
  color $default-primary-color

.wrapper
  position relative
  display block
  width 100%
  overflow hidden

.container
  padding-top 1.5rem
  padding-bottom 1.5rem
  margin-bottom 0
  max-width 80.0rem

.footer
  .container
    padding-bottom 0
    padding-top 0

.header
  background-color $default-second-color
  padding-top 1rem
  .container
    position relative
    border-top 0
    text-align center
  .title
    font-family 'Gotham Rounded A', 'Gotham Rounded B', 'Helvetica Neue', Arial, sans-serif
  .img
    height 15.0rem
    margin-bottom 2rem
  & + section
    border-top 0
  .button
    margin-top 2rem
    margin-bottom 4rem

@media (min-width: 40.0rem)
  .header
    padding-top 5rem

@media (min-width: 40.0rem)
  .header
    .button
      margin-top 2rem
      margin-bottom 4rem

.navigation
  left 0
  max-width 100%
  position fixed
  right 0
  top 0
  max-width 100vw
  z-index 99
  background #f4f5f6
  border-bottom .1rem solid #d1d1d1
  display block
  height 5.2rem
  width 100%
  .container
    padding-top 0
    padding-bottom 0
  .img
    position relative
    top .3rem
    height 2.0rem

.navigation-list
  list-style none
  margin-bottom 0
  margin-right 5.0rem

@media (min-width: 80.0rem)
  .navigation-list
    margin-right 0

.navigation-item
  float left
  margin-bottom 0
  margin-left 2.5rem
  position relative

.navigation .title,
.navigation-title
  color #606c76
  display inline
  font-family 'Gotham Rounded A', 'Gotham Rounded B', 'Helvetica Neue', Arial, sans-serif
  line-height 5.2rem
  font-size 1.6rem
  padding 0
  position relative
  text-decoration none

.navigation-link
  display inline
  line-height 5.2rem
  font-size 1.6rem
  padding 0
  text-decoration none
  &.active
    color #606c76
